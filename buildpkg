job('build-pkg') {
    steps {
        maven('package')
        maven('clean package', 'module-a/pom.xml')
        maven {
            goals('clean')
            goals('package')
            mavenOpts('-Xms256m')
            mavenOpts('-Xmx512m')
            localRepository(LocalRepositoryLocation.LOCAL_TO_WORKSPACE)
            properties(skipTests: true)
            mavenInstallation('Maven 3.6.1')
            providedSettings('central-mirror')
        }
    }
}
